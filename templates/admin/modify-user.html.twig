{% extends 'base.html.twig' %}

{% block title %}Create Editor{% endblock %}

{% block body %}
    {% for message in app.flashes('modified') %}
        {{ message }}
    {% endfor %}
    {{ form_start(form) }}
    {{ form_row(form.firstName) }}
    {{ form_row(form.lastName) }}
    {{ form_row(form.birthDate) }}

    <div>
        {{ form_label(form.email) }}
        {{ form_widget(form.email) }}
        <span>{{ form_errors(form.email) }}</span>
    </div>
    <div>
        {{ form_label(form.password) }}
        {{ form_widget(form.password) }}
        <span>{{ form_errors(form.password) }}</span>
    </div>
    <div>
        <button type="submit">Submit</button>
    </div>

    {{ form_end(form) }}
    <div>
        <form action="{{ path("delete-user", {id:user.id}) }}">
            <input type="hidden" name="token3" value="{{ csrf_token('delete' ~ id) }}">
            <button type="submit">Supprimer</button>
        </form>
    </div>
{% endblock %}